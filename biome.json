{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "experimentalScannerIgnores": [
      "**/pspdfkit.js",
      "**/pspdfkit-lib/**",
      "./web/annotation/comment-annotations/**",
      "./web/annotation/comments-status/**",
      "./web/annotation/create-annotation-from-clipboard/**",
      "./web/annotation/speech-2-text/**",
      "./web/annotation/customise-annotation-sidebar/**",
      "./web/annotation/get-all-annotations-boundingBox/**",
      "./web/annotation/redact-one-by-one/**",
      "./web/annotation/snipping-annotation/**",
      "./web/document-editor/save-selected-page-from-document-editor/**",
      "./web/signing/signing-demo-complete/**",
      "./web/signing/sign-here-upgraded"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        },
        "useImportType": "error"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "a11y": {
        "noSvgWithoutTitle": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}

{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "experimentalScannerIgnores": [
      "**/pspdfkit.js",
      "**/pspdfkit-lib/**",
      "./web/annotation/comment-annotations/**",
      "./web/annotation/comments-status/**",
      "./web/annotation/create-annotation-from-clipboard/**",
      "./web/annotation/speech-2-text/**",
      "./web/annotation/customise-annotation-sidebar/**",
      "./web/annotation/get-all-annotations-boundingBox/**",
      "./web/annotation/redact-one-by-one/**",
      "./web/annotation/snipping-annotation/**",
      "./web/document-editor/save-selected-page-from-document-editor/**",
      "./web/signing/signing-demo-complete/**",
      "./web/signing/sign-here-upgraded"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        }
      },
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "overrides": [
    {
      "includes": ["./web/document-generator/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "a11y": {
            "noSvgWithoutTitle": "off",
            "useButtonType": "off",
            "useSemanticElements": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          },
          "style": {
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
